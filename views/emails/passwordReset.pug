extends baseEmail
block content 
    p Hi #{firstName},
    p Your password reset link \n #{url}
    p We are happy to be a part of natures
    table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
        tbody
            tr
                td(align='left')
                    table(role='presentation', border='0', cellpadding='0', cellspacing='0')
                        tbody
                            tr
                                td
                                    a(href=`${url}`, target='_blank') Reset your password
    p If you did'nt forgot your password, please ignore this mail!
